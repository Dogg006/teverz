<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.teverzwizard" name="[COLOR blue]Teverz Wizard[/COLOR]" version="1.0.5" provider-name="teverz">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Teverz Build Wizard</summary>
    <description lang="en">Teverz Build Wizard allows you to gain access to the latest Teverz Builds and give you the opportunity to keep your Trakt and Real-Debrid info and much much more.</description>
    <platform>all</platform>
  </extension>
</addon>

    <addon id="repository.teverz" name="[COLOR blue]Teverz Addon Repo[/COLOR]" version="2.0.0" provider-name="Teverz">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="[COLOR blue]Teverz Addon Repo[/COLOR]">
            <info compressed="false">https://github.com/teverz/teverz/raw/master/_repo/addons.xml</info>
            <checksum>https://github.com/teverz/teverz/raw/master/_repo/addons.xml.md5</checksum>
            <datadir zip="true">https://github.com/teverz/teverz/raw/master/_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Contains Teverz Wizard</summary>
            <description>Great Repo for a great wizard</description>
            <platform>all</platform>
    </extension>
</addon>

