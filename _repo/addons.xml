<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.teverzswizard" name="[COLOR blue]Teverz Wizard[/COLOR]" version="1.0.5" provider-name="teverz">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Teverz Build Wizard</summary>
    <description lang="en">Teverz Build Wizard allows you to gain access to the latest Teverz Builds and give you the opportunity to keep your Trakt and Real-Debrid info and much much more.</description>
    <platform>all</platform>
  </extension>
</addon>

    <addon id="repository.teverz" name="[COLOR blue]Teverz Addons Repo[/COLOR]" version="1.0.2" provider-name="Teverz">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="Teverz Addons">
            <info compressed="false">https://raw.githubusercontent.com/teverz/teverz/master/_repo/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/teverz/teverz/master/_repo/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/teverz/teverz/master/_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Contains Teverz Wizard</summary>
            <description>This Repo contains the famous Teverz Wizard. We will be adding more addons as we go</description>
            <platform>all</platform>
    </extension>
</addon>
</addons>
